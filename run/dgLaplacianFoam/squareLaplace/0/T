FoamFile
{
    version         2.0;
    format          ascii;
    class           cellScalarField;
    object          T;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //


dimensions [0 0 0 0 1 0 0];

internalField uniform (0 0 0);

boundaryField
{
    left
    {
        type dirichlet;//fixedValue;
        value uniform (1 0 0);
    }
    right
    {
        type dirichlet;//fixedValue;
        value uniform (0 0 0);
    }
    bottom
    {
        type dirichlet;//fixedValue;
        value uniform (0 0 0);
    }
    top
    {
        type dirichlet;//fixedValue;
        value uniform (0 0 0);
    }
    defaultFaces
    {
        type empty;
    }
}


